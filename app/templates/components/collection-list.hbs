<div class="note-list__item-header">
  <span class="note-list__item__new" {{action "new"}}>
    <i class="fa fa-plus"></i> collection
  </span>
</div>
{{#each collections as |collection|}}
  {{yield collection}}
{{/each}}

{{#if newCollection}}
  <div class="note-list__item-unsaved">
    {{input
      value=newCollection.name
      autofocus=true
      maxlength=50
      focus-out=(action "create" newCollection)
      enter=(action "create" newCollection)
    }}
  </div>
{{/if}}
